<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="10dp">

    <ImageView
        android:id="@+id/item_cheku_info_iv"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/item_cheku_info_stitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/item_cheku_info_iv"
        android:layout_toRightOf="@id/item_cheku_info_iv"
        android:text="title" />

    <TextView
        android:id="@+id/item_cheku_info_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/item_cheku_info_iv"
        android:singleLine="true"
        android:text="description" />

    <TextView
        android:id="@+id/item_cheku_info_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="time" />

</RelativeLayout>