<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <RelativeLayout
        android:background="#fff"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/setting_about_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/top_back"/>
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于"/>
    </RelativeLayout>
    <ImageView
      android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginTop="130dp"
        android:background="@drawable/about_bottom_top"/>

    <ImageView
        android:id="@+id/about_button"
       android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/about_bottom"/>
    <TextView
        android:id="@+id/about_version"
        android:layout_above="@id/about_button"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="版本 : 5.1.1"/>
    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/about_copy"
        android:layout_below="@id/about_version"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="copyright @ 2002-2016FBLIFE.com"
        />
    <TextView
        android:layout_below="@id/about_copy"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="All right reserved"
        />


</RelativeLayout>
