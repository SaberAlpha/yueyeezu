<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:padding="10dp">

    <TextView
        android:id="@+id/item_cheku_zongshu_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="版本" />

    <TextView
        android:id="@+id/item_cheku_zongshu_c_fdj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/item_cheku_zongshu_name"
        android:layout_marginTop="10dp"
        android:text="马力" />

    <TextView
        android:id="@+id/item_cheku_zongshu_c_bsx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/item_cheku_zongshu_c_fdj"
        android:layout_centerHorizontal="true"
        android:text="档位" />



    <TextView
        android:id="@+id/item_cheku_zongshu_c_cszdj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/item_cheku_zongshu_c_fdj"
        android:text="price"
        android:textColor="#fd0408" />

    <TextView
        android:id="@+id/item_cheku_zongshu_pricetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/item_cheku_zongshu_c_fdj"
        android:layout_toLeftOf="@id/item_cheku_zongshu_c_cszdj"
        android:text="指导价:" />

</RelativeLayout>