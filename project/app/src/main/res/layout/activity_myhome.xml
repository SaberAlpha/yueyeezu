<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:background="#fff"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/Myhome_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/news_detail_head_back"/>
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人主页"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/Myhome_letter_write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/letter_write"/>
    </RelativeLayout>
    <com.example.administrator.suvsproject.modules.MyLogin.widget.MyHomeScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/beijingtupianimage"/>

        <ImageView
            android:layout_marginLeft="15dp"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/personal_icon"/>
    </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_margin="15dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/myhome_imformation"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="详细\n信息"/>
                <View
                    android:layout_gravity="center_vertical"
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:background="#0ff"/>
                <LinearLayout
                    android:id="@+id/myhone_attion"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/myhome_attionnum"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="0"/>
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="关注"/>
                    </LinearLayout>
                <View
                    android:layout_gravity="center_vertical"
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:background="#0ff"/>
                    <LinearLayout
                        android:id="@+id/myhone_fan"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/myhome_fannum"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="0"/>
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="粉丝"/>
                        </LinearLayout>
                <View
                    android:layout_gravity="center_vertical"
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:background="#0ff"/>
                        <LinearLayout
                        android:id="@+id/myhone_write"
                        android:layout_weight="1"
                         android:layout_width="0dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/myhome_writenum"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="0"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="文集"/>
                        </LinearLayout>
                <View
                    android:layout_gravity="center_vertical"
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:background="#0ff"/>
                        <LinearLayout
                            android:id="@+id/myhone_paint"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/myhome_paintnum"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="0"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="画廊"/>
                            </LinearLayout>
                <View
                    android:layout_gravity="center_vertical"
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:background="#0ff"/>
                            <LinearLayout
                                android:id="@+id/myhone_qunan"
                                android:layout_weight="1"
                               android:layout_width="0dp"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/myhome_quannum"
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="0"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="圈子"/>
                        </LinearLayout>
                <View
                    android:layout_gravity="center_vertical"
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:background="#0ff"/>
                <TextView
                    android:id="@+id/myhome_erweima"
                    android:layout_marginLeft="3dp"
                 android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="二维码"
                    />
            </LinearLayout>
            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/myhome_swipfresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.example.administrator.suvsproject.modules.MyLogin.widget.HomeScrollListView
                    android:id="@+id/Myhome_list_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </com.example.administrator.suvsproject.modules.MyLogin.widget.HomeScrollListView>
            </android.support.v4.widget.SwipeRefreshLayout>

        </LinearLayout>
    </com.example.administrator.suvsproject.modules.MyLogin.widget.MyHomeScrollView>
</LinearLayout>
