<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.suvsproject.modules.luntan.activity.PaihangActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/back_luntan"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:src="@drawable/homepage_detail_bottom_back_default" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="排行榜"
            android:textSize="18sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lineColor" />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:padding="10dp"
        >

        <RadioButton
            android:id="@+id/zhuti_rb"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/rb_color"
            android:button="@null"
            android:text="主题"
            android:gravity="center"
            android:textColor="@drawable/luntan_infotab_selector"
            android:textSize="16sp"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/chexing_rb"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/rb_color"
            android:button="@null"
            android:text="车型"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:textColor="@drawable/luntan_infotab_selector"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/dadui_rb"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/rb_color"
            android:button="@null"
            android:text="大队"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:textColor="@drawable/luntan_infotab_selector"
            android:textSize="16sp" />
    </RadioGroup>
    <FrameLayout
        android:id="@+id/paihang_frag_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
</LinearLayout>
