<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:layout_margin="20dp"
        android:id="@+id/mytiezi_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/head_back"/>

    <android.support.design.widget.TabLayout
        android:layout_marginTop="10dp"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="70dp"
        android:id="@+id/mytiezi_tab_view"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.design.widget.TabLayout>
    <View
        android:layout_below="@id/mycollection_tab_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C1C1C1"/>
    <android.support.v4.view.ViewPager
        android:layout_marginTop="1dp"
        android:layout_below="@id/mytiezi_tab_view"
        android:id="@+id/mytiezi_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</RelativeLayout>
