<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/headerview_cheku_zongshu_iv"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/headerview_cheku_zongshu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/headerview_cheku_zongshu_iv"
            android:layout_toRightOf="@id/headerview_cheku_zongshu_iv"
            android:text="name" />

        <TextView
            android:id="@+id/headerview_cheku_zongshu_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/headerview_cheku_zongshu_iv"
            android:text="size" />


        <TextView
            android:id="@+id/headerview_cheku_zongshu_pricetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/headerview_cheku_zongshu_iv"
            android:layout_toRightOf="@id/headerview_cheku_zongshu_iv"
            android:text="指导价：" />


        <TextView
            android:id="@+id/headerview_cheku_zongshu_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/headerview_cheku_zongshu_iv"
            android:layout_toRightOf="@id/headerview_cheku_zongshu_pricetext"
            android:text="price"
            android:textColor="#ec0d1c" />


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#abc"
        android:text="参数配置" />


</LinearLayout>