<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <RelativeLayout
        android:background="#fff"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/Myhomesaoyisao_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/news_detail_head_back"/>
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扫一扫"/>

    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

    <SurfaceView
        android:id="@+id/preview_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <com.zxing.view.ViewfinderView
        android:id="@+id/viewfinder_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:orientation="vertical" >
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/image_erweima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <Button
            android:textColor="#fff"
            android:background="@null"
            android:id="@+id/btn_cancel_scan"
          android:layout_width="wrap_content"
            android:layout_height="40dp"
          android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="75dp"
            android:text="对准二维码即可进行扫描"
            android:textSize="15sp"
            android:textStyle="bold" />
        
    </RelativeLayout>
    </FrameLayout>
    <RelativeLayout
        android:background="#353432"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:id="@+id/xiangce"
             android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:scaleType="centerCrop"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/sao_xiangce"/>
            <TextView
              android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="相册"/>
        </LinearLayout>
        <LinearLayout
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:id="@+id/open_light"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:scaleType="centerCrop"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/sao_kaideng"/>
            <TextView
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开灯"/>
        </LinearLayout>
        <LinearLayout
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:id="@+id/my_erweima"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:scaleType="centerCrop"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/sao_erweima"/>
            <TextView
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的二维码"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>