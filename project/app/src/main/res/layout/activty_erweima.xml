<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:background="#fff"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/Myerweima_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/news_detail_head_back"/>
        <TextView
           android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的二维码"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/Myerweima_letter_write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/letter_write"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0ff"/>

    <Button
        android:id="@+id/btn_add_qrcode"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="显示我的二维码" />

    <LinearLayout
        android:background="@drawable/luntan_my_info_shape"
       android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/iv_qr_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"/>
    </LinearLayout>
   <LinearLayout
       android:layout_marginLeft="20dp"
       android:layout_marginRight="20dp"
       android:layout_width="match_parent"
       android:orientation="horizontal"
       android:background="@drawable/luntan_my_info_shape"
       android:layout_height="wrap_content">
       <ImageView
           android:layout_margin="10dp"
           android:id="@+id/myerweima_image"
           android:layout_width="60dp"
           android:background="@drawable/detail_person_icon"
           android:layout_height="60dp" />
       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:layout_height="wrap_content">
           <TextView
               android:layout_margin="10dp"
               android:textColor="#000"
               android:textStyle="bold"
               android:textSize="18sp"
               android:id="@+id/myerweima_username"
               android:layout_width="wrap_content"
               android:text="usernmae"
               android:layout_height="wrap_content" />
           <TextView
              android:layout_marginLeft="10dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="扫一扫二维码关注的主页"/>
       </LinearLayout>

   </LinearLayout>


</LinearLayout>