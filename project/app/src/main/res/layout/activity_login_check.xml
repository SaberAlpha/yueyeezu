<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:background="#fff"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/login_clean"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/clean_text"/>
        <TextView
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"/>
    </RelativeLayout>

    <ImageView
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:layout_width="220dp"
        android:layout_height="100dp"
        android:background="@drawable/logoinlogo"/>

    <LinearLayout
        android:background="#fff"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/login_username"
            android:layout_margin="10dp"
            android:background="@null"
            android:inputType="text"
            android:hint="用户名"
            android:drawableLeft="@drawable/personal_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/login_password"
            android:layout_margin="10dp"
            android:background="@null"
             android:inputType="textPassword"
            android:hint="密码"
            android:drawableLeft="@drawable/personal_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/login_sure"
            android:layout_margin="10dp"
            android:background="#78797A"
             android:text="登录"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/weixin_login"
                android:layout_margin="10dp"
                android:gravity="center_vertical"
                android:text="使用微信登录"
                android:drawableLeft="@drawable/login_weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/setaccount"
                android:gravity="center_vertical"
                android:layout_margin="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册帐号"/>
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>
